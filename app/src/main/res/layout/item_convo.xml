<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <Button
            android:id="@+id/btn_choose_convo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/transparent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_user_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/basic_circle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/text_username"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="User A"
                android:textSize="20dp"
                app:layout_constraintLeft_toRightOf="@+id/image_user_icon"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/text_recent_message"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:text="Most recent message"
                android:textSize="12dp"
                app:layout_constraintLeft_toRightOf="@+id/image_user_icon"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/text_date"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="12/26/2019"
                android:textSize="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>