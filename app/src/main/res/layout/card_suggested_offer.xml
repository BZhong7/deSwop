<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/suggested_offer_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/_10dp">

        <TextView
            android:id="@+id/user_wants_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="John Doe wants to trade:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/shoeImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/shoe01" />

            <View
                android:id="@+id/divider"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/image_swap_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_swap_horiz_black" />

            <View
                android:id="@+id/divider2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <ImageView
                android:id="@+id/bagImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/bag02" />

        </LinearLayout>



        <TextView
            android:id="@+id/suggested_offer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Suggested Offer Card" />
    </androidx.cardview.widget.CardView>

</LinearLayout>